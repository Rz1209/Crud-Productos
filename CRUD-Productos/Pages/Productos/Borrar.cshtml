@page
@model CRUD_Productos.Pages.Productos.BorrarModel
@{
    ViewData["Title"] = "Borrar Producto";
}
<h1>Borrar Producto</h1>
<p>¿Estás seguro que deseas eliminar este producto?</p>
<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">Nombre: @Model.Producto.Nombre</h5>
        <strong>Precio</strong>: @Model.Producto.Precio<br />
        <strong>Stock</strong>: @Model.Producto.Stock<br />
        <strong>Fecha de Creación</strong>: @Model.Producto.FechaCreacion
    </div>
</div>
<form method="post">
    <button type="submit" class="btn btn-danger"><i class="bi bi-trash3"></i> Borrar</button>
    <a asp-page="index" class="btn btn-secondary"><i class="bi bi-x-lg"></i> Cancelar</a>
</form>